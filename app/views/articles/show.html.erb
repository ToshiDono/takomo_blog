<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @article.title %></h3>
  </div>
  <div class="panel-body">
    <%= @article.text %>
  </div>
</div>
<%= link_to t('actions.back'), articles_path, class: 'btn btn-default btn-m' %>
<%= link_to t('actions.edit'), edit_article_path, class: 'btn btn-default btn-m' %>
<%= link_to t('actions.delete'), article_path(@article.id),
            method: :delete,
            data: { confirm: t('user.edit.messages.confirm') },
            class: 'btn btn-default btn-m' %>
