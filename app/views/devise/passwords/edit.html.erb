<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t('user.password.new') %><br />
    <% if @minimum_password_length %>
      <em>(<%= t('user.edit.minimum') %> <%= @minimum_password_length %> <%= t('user.edit.characters') %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "#{t('user.password.confirm')} #{t('user.pronouns.new')} #{t('user.password.password')}" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "#{t('actions.edit')}
                 #{t('pronouns.my')}
                 #{t('user.password.password')}
                 " %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
